package AllMight_Tinker

import ClosureEvents
import Hero
import objectIDs

init
	EventListener.add(EVENT_PLAYER_CHAT_FILTER) -> 
		if EventData.getChatMessage() == "1"
			let p = EventData.getTriggerPlayer()
			let u = Hero.get(p.getId())
			print("Tinkering Upgrade for "+Hero.get(p.getId()).getName())
			u.setAbilityLevel(ALL_MIGHT_SWAPPER1, 1)
			u.setAbilityLevel(ALL_MIGHT_SWAPPER2, 1)
		if EventData.getChatMessage() == "2"
			let p = EventData.getTriggerPlayer()
			let u = Hero.get(p.getId())
			print("Tinkering Upgrade for "+Hero.get(p.getId()).getName())
			u.setAbilityLevel(ALL_MIGHT_SWAPPER1, 2)
			u.setAbilityLevel(ALL_MIGHT_SWAPPER2, 2)